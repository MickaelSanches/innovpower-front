<style>
  /* Effet de dégradé constant */
  .bg-gradient-to-r {
    background: linear-gradient(to right, black, gold);
    -webkit-background-clip: text;
    color: transparent;
  }

  /* Animation machine à écrire pour affichage et retrait */
  .typing-effect {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    border-right: 3px solid gold;
    animation: typing 4s steps(40) forwards, blink 0.75s step-end infinite;
    margin: 0 auto;
  }

  .reverse-typing-effect {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    border-right: 3px solid gold;
    animation: reverseTyping 4s steps(40) forwards, blink 0.75s step-end infinite;
    margin: 0 auto;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes reverseTyping {
    from { width: 100%; }
    to { width: 0; }
  }

  @keyframes blink {
    from, to { border-color: transparent; }
    50% { border-color: gold; }
  }
</style>

<script>
  const animatedText = document.getElementById('animated-text');

  function handleScroll() {
    if (animatedText) {
      const rect = animatedText.getBoundingClientRect();
      const windowHeight = window.innerHeight;

      if (rect.top <= windowHeight && rect.bottom >= 0) {
        // Si la section est visible dans la fenêtre
        animatedText.classList.add('typing-effect');
        animatedText.classList.remove('reverse-typing-effect');
      } else if (rect.top > windowHeight || rect.bottom < 0) {
        // Si la section sort de la vue
        animatedText.classList.add('reverse-typing-effect');
        animatedText.classList.remove('typing-effect');
      }
    }
  }

  // Ajoute l'écouteur d'événements de défilement
  window.addEventListener('scroll', handleScroll);
</script>
