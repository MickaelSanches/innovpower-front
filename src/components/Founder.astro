<style>
    /* Style pour une touche élégante */
    h2 {
    color: #333;
    background: linear-gradient(to right, black, #d4af37);
    -webkit-background-clip: text;
    color: transparent;
    }

    /* Animation d'apparition au scroll */
    .fadeInOnScroll {
    opacity: 1 !important;
    }

    /* Effet de fade-in */
    #signature {
    transform: translateY(20px);
    }
</style>

<script>
     // Fonction pour ajouter l'effet au scroll
    function handleScroll() {
    const title = document.getElementById("founder-title");
    const signature = document.getElementById("signature");

    if (title && signature) {
        const titlePosition = title.getBoundingClientRect().top;
        const signaturePosition = signature.getBoundingClientRect().top;
        const windowHeight = window.innerHeight;

      // Appliquer l'effet fade-in lorsque le titre et la signature sont visibles
        if (titlePosition < windowHeight && titlePosition > 0) {
        title.classList.add("fadeInOnScroll");
        }
        if (signaturePosition < windowHeight && signaturePosition > 0) {
        signature.classList.add("fadeInOnScroll");
        }
    }
    }

    // Écouteur d'événement pour le scroll
    window.addEventListener("scroll", handleScroll);
</script>
