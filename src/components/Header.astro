<header class="fixed top-0 w-full bg-black bg-opacity-75 text-white py-4 z-50">
  <div class="container mx-auto flex justify-between items-center px-4 md:px-8">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-2">
      <img src="/img/logo.webp" alt="InnovPower" class="h-24 w-auto">
    </a>
    <!-- Menu de navigation -->
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="hover:text-custom-gold transition duration-300">Accueil</a>
      <a href="/portfolio" class="hover:text-custom-gold transition duration-300">Portfolio</a>
      <a href="/services" class="hover:text-custom-gold transition duration-300">Services</a>
      <a href="/contact" class="hover:text-custom-gold transition duration-300">Contact</a>
      <!-- <a href="/hub" class="hover:text-custom-gold transition duration-300 font-semibold">InnovPower Hub</a> -->
    </nav>
    <!-- Menu mobile -->
    <div class="md:hidden">
      <!-- Icône du menu burger -->
      <button id="mobile-menu-button" class="relative z-50">
        <div class="hamburger">
          <span class="block w-8 h-0.5 bg-white mb-2 transition-all duration-300"></span>
          <span class="block w-8 h-0.5 bg-white mb-2 transition-all duration-300"></span>
          <span class="block w-8 h-0.5 bg-white transition-all duration-300"></span>
        </div>
      </button>
    </div>
  </div>

  <!-- Menu mobile déroulant avec effet de fondu -->
  <div id="mobile-menu" class="absolute top-0 left-0 w-full bg-black bg-opacity-90 opacity-0 pointer-events-none transition-opacity duration-500 ease-in-out z-40">
    <nav class="flex flex-col items-center space-y-4 py-4">
      <a href="/" class="hover:text-custom-gold transition duration-300">Accueil</a>
      <a href="/portfolio" class="hover:text-custom-gold transition duration-300">Portfolio</a>
      <a href="/services" class="hover:text-custom-gold transition duration-300">Services</a>
      <a href="/contact" class="hover:text-custom-gold transition duration-300">Contact</a>
      <!-- <a href="/hub" class="hover:text-custom-gold transition duration-300 font-semibold">InnovPower Hub</a> -->
    </nav>
  </div>

  <!-- Script pour le menu mobile et l'icône hamburger -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const hamburger = document.querySelector('.hamburger');

      if (menuButton && mobileMenu && hamburger) {
        menuButton.addEventListener('click', () => {
          // Toggle l'effet de fondu pour le menu
          mobileMenu.classList.toggle('opacity-0');
          mobileMenu.classList.toggle('pointer-events-none');
          mobileMenu.classList.toggle('opacity-100');

          // Animation de l'icône hamburger (modification simple sans croix)
          hamburger.classList.toggle('open');
        });
      }
    });
  </script>

  <!-- Styles pour l'animation de l'icône hamburger et l'effet de fondu -->
  <style>
    .hamburger.open span:nth-child(1) {
      transform: translateY(8px);
    }

    .hamburger.open span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.open span:nth-child(3) {
      transform: translateY(-8px);
    }
  </style>
</header>
