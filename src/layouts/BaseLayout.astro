---
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "InnovPower - Solutions Web3 et digitales"}</title>
    <meta
		name="description"
		content={description ||
        "Découvrez InnovPower, créateur de solutions Web3 et digitales, avec des services innovants pour votre entreprise."}
    />

    <!-- Open Graph -->
    <meta
		property="og:title"
		content={title || "InnovPower - Solutions Web3 et digitales"}
    />
    <meta
		property="og:description"
		content={description ||
        "Découvrez InnovPower, créateur de solutions Web3 et digitales."}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://innovpower.com/" />
    <meta
		property="og:image"
		content="https://innovpower.com/images/cover.jpg"
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
		name="twitter:title"
		content={title || "InnovPower - Solutions Web3 et digitales"}
    />
    <meta
		name="twitter:description"
		content={description ||
        "Découvrez InnovPower, créateur de solutions Web3 et digitales."}
    />
    <meta
		name="twitter:image"
		content="https://innovpower.com/images/cover.jpg"
    />

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="src/styles/global.css">
	</head>
	<body>
    <main class="min-h-screen">
		<slot />
    </main>
  	</body>
</html>
